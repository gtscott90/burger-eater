<div class="container">
  <div class="row">
    <div class="col" align="center">
      <img src="assets/images/burger-logo-2.png" alt="burger logo">
      <h1 class="justify-center-content">Eat Da Burger</h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <h2>Burgers to be eaten!</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col">
      <h2>Burgers that have been eaten!</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col" align="center"><h2>Add a Burger</h2>
    <form id="create-form">

      <div class="form-group">
        <label for="bgr">Burger Name:</label>
        <input type="text" id="bgr" name="name">
      </div>

      <button class="btn btn-danger" type="submit">Add burger</button>
    </form>
    </div>
  </div>
</div>






